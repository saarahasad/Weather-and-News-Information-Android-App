<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:fitsSystemWindows="true"
    android:background="@color/transparent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    tools:context="com.example.apple.project2.ListContentFragment">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/Settingbutton"
        android:src="@drawable/settingicon"
        android:background="@drawable/settingicon"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:onClick="showPopup" />

    <TextView
        android:id="@+id/city_field"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="place"
        android:textSize="40dp"
        android:textColor="#90ffffff"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_horizontal_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/change"
        android:foreground="?attr/selectableItemBackground"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:text="Click to view map" />


        <ImageView  android:id="@+id/weather_icon"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:alpha="0.8"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/temp_field"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="TEMP"
            android:textSize="50dp"
            android:textColor="@color/colorWhite"
             />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_horizontal_margin" />
    <TextView
        android:id="@+id/humditity_field"
        android:layout_width="wrap_content"
        android:textSize="25dp"
        tools:text="Details"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center"
        android:clickable="true"

        />

</LinearLayout>
